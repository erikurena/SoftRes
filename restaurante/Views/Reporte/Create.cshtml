@model restaurante.Models.Reporte
@{
    ViewData["Title"] = "Reporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <form asp-action="Create" method="post">
        <div class="row">
            <h2>Lista de Todos los Productos Vendidos por fecha:</h2>
            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label asp-for="FechaInicio"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label asp-for="FechaFin"></label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label class="col-12" style="color: rgba(0,0,0,0)">.</label>
                <button type="submit" class="btn btn-outline-warning col-12">Imprimir</button>
            </div>
        </div>
    </form>
</div>
<br />
<div class="row">
    <form asp-action="ProductosMasVendidos" method="post">
        <div class="row">
            <h2>Lista de Productos Mas Vendidos por fecha:</h2>
            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label asp-for="FechaInicio"></label>
                <input asp-for="FechaInicio" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-12 col-md-4 col-lg-4">
                <label asp-for="FechaFin"></label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-sm-12 col-md-3 col-lg-4">
                <label class="col-12" style="color: rgba(0,0,0,0)">.</label>
                <button type="submit" class="btn btn-outline-warning col-12">Imprimir</button>
            </div>
        </div>
    </form>   

</div>

