@model restaurante.Models.Orden

@{
    ViewData["Title"] = "Details";
    Layout = null;
    int a = 0;
}
<!DOCTYPE html>
<html>
    <head>
        <link href="~/css/printer.css" rel="stylesheet" />
        <title>Recibo</title>
    </head>

    <body onload="window.print()" onafterprint="history.back()">
        <div class="contenedor onlyPrint">
        <div style="text-align:center">
                <h2 class="text-center">Restaurante</h2>
                <p class="text-center fw-bold">Calle</p>
                <p class="text-center fw-bold">Telefono</p>
                <h4 style="font-size: xx-large;">RECIBO</h4>
            </div>
      
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-8">
                    Fecha: @Html.DisplayFor(model => model.FechaOrden)     
                </dt>
                <dt class="col-sm-4">
                    Hora:  @Html.DisplayFor(model => model.TiempoOrden)
                </dt>
                <dt class="col-sm-10">
                    Cliente: @Html.DisplayFor(model => model.IdClienteNavigation!.Apellido)
                </dt>
               
                <dt class="col-sm-12">
                        <div class="p-0 m-0">
                        <hr class="m-0 p-0" />
                        <p class=" m-0 p-0">Detalles de los Productos</p>
                        <hr class="m-0 p-0" />
                        </div>
                    
                    <table class="table table-striped ">
                        <thead class="">
                            <tr>
                                <th>N°</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th >Precio</th>
                                <th>Sub Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Detalleordens!)
                            {
                                <tr>
                                    <td>@(a += 1)</td>
                                    <td>@Html.DisplayFor(model => item.IdProductoNavigation!.Nombre)</td>
                                    <td>@Html.DisplayFor(model => item.Cantidad)</td>
                                    <td>@Html.DisplayFor(model => item.PrecioUnitario)</td>
                                    <td>@Html.DisplayFor(model => item.SubTotal)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </dt>
                <hr />
                <br />
                <dt class="col-sm-3" style="text-align: end">
                    Total Importe:  @Html.DisplayFor(model => model.Total)
                </dt>
                <br class="pt-5"/>
                <dt class="col-sm12 pt-5" >
                    Atendido por: @Html.DisplayFor(model => model.IdEmpleadoNavigation!.Nombre)
                </dt>
            </dl>
        </div>
</div>
</body>
</html>


