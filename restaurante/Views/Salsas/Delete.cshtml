@model restaurante.Models.Complemento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>
<div class="card">
    <div class="card-header">
        <h3>¿Estas seguro de eliminar la Salsa?</h3>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Nombre del Complemento
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreIngrediente)
                </dd>
                <dt class="col-sm-2">
                   Categoria
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCategoriaComplementoNavigation!.TipoCategoriaComplemento)
                </dd>
            </dl>

            <form asp-action="Delete" asp-controller="Salsas" method="post">
                <input type="hidden" asp-for="IdComplemento" />
                <a asp-action="Index" asp-route-id="2" class="btn btn-secondary">Volver a la lista</a> |
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>

