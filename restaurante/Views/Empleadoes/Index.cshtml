@model IEnumerable<restaurante.Models.Empleado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <h1>Empleados</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
    </p>
    <table class="table tables">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApellidoPaterno)
                </th>
                <th>
                    Contratación
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    Cargo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaContratacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCargoNavigation!.TipoCargo)
                    </td>
                    <td class="co-3">
                        <div class="d-flex justify-content-end">
                            <a asp-action="Edit" asp-route-id="@item.IdEmpleado" class=" me-1"><i class="fa fa-solid fa-user-pen"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.IdEmpleado" class="ms-1 me-1"><i class="fa fa-solid fa-circle-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.IdEmpleado" class="ms-1 me-1"><i class="fa fa-solid fa-trash-can"></i></a>
                        </div>                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>

