@model restaurante.Models.Empleado

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear</h1>

<div class="card">
    <div class="card-header">
        <h4>Empleado</h4>
    </div>
    <div class="card-body">

        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" d-flex flex-column">
                <div class="row">
                    <div class="form-group col-sm-4">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-sm-4">
                        <label asp-for="ApellidoPaterno" class="control-label"></label>
                        <input asp-for="ApellidoPaterno" class="form-control" />
                        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-sm-4">
                        <label asp-for="ApellidoMaterno" class="control-label"></label>
                        <input asp-for="ApellidoMaterno" class="form-control" />
                        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-sm-4">
                        <label class="control-label">Fecha de Contratación</label>
                        <input type="date" asp-for="FechaContratacion" class="form-control" value="@DateOnly.FromDateTime(DateTime.Now)" />
                        <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-sm-4">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" type="tel" class="form-control" maxlength="8"/>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-sm-4">
                        <label class="control-label">Cargo</label>
                        <select asp-for="IdCargo" class="form-control form-select" asp-items="ViewBag.IdCargo" ></select>
                    </div>
                    <div class="form-group  col-sm-4">
                        <label class="control-label">Fotografia</label>
                        <input asp-for="FotoEmpleadoFile" class="form-control" accept="image/*" />
                        <span asp-validation-for="FotoEmpleadoFile" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label class="control-label">Contraseña</label>
                        <div class="input-group">
                            <input asp-for="Pass" type="password"  id="password" class="form-control" />
                            <span class="input-group-text">
                                <i class="fa fa-eye-slash" id="togglePassword"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Pass" class="text-danger"></span>
                    </div>

                    <div class="row mt-3 pe-0">
                        <div class="form-group col">
                            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                        <div class="form-group col pe-0">
                            <input type="submit" value="Crear" class="btn btn-primary col-12" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', () => {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('fa-eye');
    });
</script>
