@model restaurante.Models.Empleado

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>
<div class="card">
    <div class="card-header">
        <h3>¿Estas seguro de eliminar al Empleado?</h3>
    </div>
    <div class="card-body">
        <div>

            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ApellidoPaterno)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.ApellidoPaterno)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ApellidoMaterno)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.ApellidoMaterno)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.FechaContratacion)
                </dt>
                <dd class="col-sm-7">
                    Contratación
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-5">
                   Cargo
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.IdCargoNavigation!.TipoCargo)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdEmpleado" />
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>




