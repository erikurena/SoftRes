@model restaurante.Models.Empleado

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<div class="card">
    <div class="card-header">
        <h4>Empleado</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-column">
                <div class="row">
                    <input type="hidden" asp-for="IdEmpleado" id="IdEmpleado" />
                    <div class="form-group col-sm-4">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="ApellidoPaterno" class="control-label"></label>
                        <input asp-for="ApellidoPaterno" class="form-control" />
                        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="ApellidoMaterno" class="control-label"></label>
                        <input asp-for="ApellidoMaterno" class="form-control" />
                        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label class="control-label">Fecha de contratación</label>
                        <input type="date" asp-for="FechaContratacion" class="form-control" />
                        <span asp-validation-for="FechaContratacion" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label class="control-label">Cargo</label>
                        <select asp-for="IdCargo" class="form-control form-select" asp-items="ViewBag.IdCargo"></select>
                        <span asp-validation-for="IdCargo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-4">
                        <label asp-for="FotoEmpleadoFile" class="control-label"></label>
                        <input asp-for="FotoEmpleadoFile" class="form-control" accept="image/*" />
                        <span asp-validation-for="FotoEmpleadoFile" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-sm-4 ">
                        <label  class="d-block control-label " style="color:rgba(255,0,0,0)">.</label>
                        <a asp-action="CambiarPassword" asp-controller="Empleadoes" class="btn btn-outline-danger col-12" asp-route-idEmpleado="@Model.IdEmpleado">Nueva Constraseña</a>
                    </div>
                    <div class="row mt-3 pe-0">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        </div>
                        <div class="form-group col">
                            <input type="submit" value="Guardar" class="btn btn-primary col-12 pe-0" />
                        </div>

                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', () => {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('fa-eye');
    });
</script>
