@model restaurante.Models.Empleado

@{
    ViewData["Title"] = "CambiarPass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="CambiarPassword">
    <input type="hidden" asp-for="IdEmpleado" name="id"/>
    <div class="form-group col-sm-4">
        <label class="control-label">Contraseña</label>
        <div class="input-group">
            <input asp-for="Pass" type="password" id="password" class="form-control" />
            <span class="input-group-text">
                <i class="fa fa-eye-slash" id="togglePassword"></i>
            </span>
        </div>
        <span asp-validation-for="Pass" class="text-danger"></span>
    </div>

    <div class="row mt-3 pe-0">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
        <div class="form-group col">
            <input type="submit" value="Guardar" class="btn btn-primary col-12 pe-0" />
        </div>
    </div>
</form>

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', () => {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('fa-eye');
    });
</script>
