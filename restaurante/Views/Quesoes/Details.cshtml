@model restaurante.Models.Complemento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle</h1>
<div class="card">
    <div class="card-header">
        <h4>Queso</h4>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                   Nombre del complemento
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreIngrediente)
                </dd>
                <dt class="col-sm-2">
                  Categoria
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCategoriaComplementoNavigation!.TipoCategoriaComplemento)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index" asp-route-id="1" class="btn btn-secondary">Volver a la lista</a>
        </div>

    </div>
</div>

